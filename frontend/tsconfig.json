{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["vite/client", "react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "src/types"]
}
